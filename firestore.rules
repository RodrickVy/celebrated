rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  match /lists/{listId} {
      allow create,delete: if request.auth != null && request.resource.data.authorId == request.auth.id;
      allow read,update: if true;
    }
  }
}